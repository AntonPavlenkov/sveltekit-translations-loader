{
	"name": "sveltekit-translations-loader",
	"version": "0.0.21",
	"description": "A powerful translation system for SvelteKit with automatic type generation and runtime injection",
	"author": "Anton Pavlenkov",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AntonPavlenkov/sveltekit-translations-loader.git"
	},
	"homepage": "https://github.com/AntonPavlenkov/sveltekit-translations-loader#readme",
	"bugs": {
		"url": "https://github.com/AntonPavlenkov/sveltekit-translations-loader/issues"
	},
	"scripts": {
		"dev": "npm run prepack && vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest run",
		"test:unit": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"prepublishOnly": "npm run test && npm run build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./plugin": {
			"types": "./dist/plugin/index.d.ts",
			"import": "./dist/plugin/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"import": "./dist/server/index.js"
		},
		"./helpers": {
			"types": "./dist/helpers/index.d.ts",
			"import": "./dist/helpers/index.js"
		}
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0"
	},
	"dependencies": {},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/kit": "^2.36.1",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@types/node": "^24.3.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"svelte": "^5.38.2",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"vite": "^7.1.3",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"translations",
		"i18n",
		"internationalization",
		"typescript",
		"vite-plugin"
	]
}
